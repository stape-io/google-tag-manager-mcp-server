# Google Tag Manager API credentials

# === SERVICE ACCOUNT AUTHENTICATION (Option 1) ===
# Path to the service account key file
GTM_SERVICE_ACCOUNT_KEY_PATH=./your-service-account-key.json
# Or set the credentials directly (for cloud environments)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# === OAUTH2 AUTHENTICATION (Option 2) ===
# OAuth2 credentials from Google Cloud Console
GTM_CLIENT_ID=your-client-id.apps.googleusercontent.com
GTM_CLIENT_SECRET=your-client-secret
GTM_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth2 tokens (obtained after completing OAuth2 flow)
GTM_ACCESS_TOKEN=your-access-token
GTM_REFRESH_TOKEN=your-refresh-token

# Claude API key (if needed)
CLAUDE_API_KEY=your-claude-api-key

# Server configuration
PORT=3000